{
  "compilerOptions": {
    "typeRoots": ["./lib/typings.d.ts"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "dom"]
  },
  "include": [
    "./lib/**/**/*"
  ]
}
